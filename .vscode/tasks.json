{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build first c app",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "src/main.cpp",
                "-o",
                "build/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "run first c app",
            "type": "shell",
            "command": "cd build & main.exe",
            "problemMatcher": []
        }
    ]
}